{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 style="font-family: 'Bebas Neue';  font-size: 66px; color:white; text-shadow: 1px 1px 2px black;"><center>User<center></h1>

    <table class="table table-striped text-center">
        <tbody class="btn-light">
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group btn-block" role="group">
        <a class="btn btn-dark"href="{{ path('admin_user_index') }}"><i class="fas fa-undo"></i></a>
        <a class="btn btn-warning" href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i></a>
    </div>
    <br>
    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
